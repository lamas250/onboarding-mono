{
  "compilerOptions": {
      "esModuleInterop": true,
      "lib": ["es2019"],
      "moduleResolution": "node",
      "module": "commonJS",
      "outDir": "src/dist",
      "strict": true,
      "target": "es2019",
      "types": ["jest","node"],
      "allowJs": true,
      "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "src/dist",
    "src/tests"
  ],
  "include": [
    "src/**/*",
    "jest.config.js"
  ]
}